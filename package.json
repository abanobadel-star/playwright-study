  "main": "index.js",
  "scripts": {
    "clean:reports": "rimraf allure-results && rimraf allure-report && mkdirp allure-results && mkdirp allure-report",
    "report:generate": "npx allure generate ./allure-results --clean",
    "report:open": "npx allure open ./allure-report",
    "pretest": "npm run clean:reports",
    "posttest": "npm run report:generate && npm run report:open",
    "script:to:run": "npx playwright test Assertion",
    "test": "npm run script:to:run || npm run posttest"
  },
